<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_circle"
        android:contentDescription="People"
        android:src="@drawable/baseline_person_24" />

    <TextView
        android:id="@+id/botName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@+id/image"
        android:layout_marginTop="24dp"
        android:text="@string/chatbot_name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/messageContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/botName"
        android:layout_marginTop="58dp"
        android:background="@drawable/shape_chatbot"
        android:elevation="8dp"
        android:maxWidth="180dp"
        android:padding="8dp"
        android:text="texttexttexttexttexttexttexttexttexttexttexttexttexttexttexttexttexttexttexttexttexttexttext" />

    <TextView
        android:id="@+id/messageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="오후 3:30"
        android:layout_below="@id/messageContent"
        android:layout_alignStart="@id/messageContent"
        />


</RelativeLayout>
